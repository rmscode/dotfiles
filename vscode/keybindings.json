// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+d d",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "\n### $CURRENT_MONTH.$CURRENT_DATE.$CURRENT_YEAR\n$0"
        }
    },
    
    {
        "key": "ctrl+d t",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus",
        "args": {
            "snippet": "\n#### $CURRENT_HOUR$CURRENT_MINUTE { #$CURRENT_MONTH$CURRENT_DATE$CURRENT_YEAR-$CURRENT_HOUR$CURRENT_MINUTE }\n\n$0\n\n---\n"
        }
    },
    
    {
        "key": "ctrl+shift+u",
        "command": "editor.action.transformToUppercase",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+l",
        "command": "editor.action.transformToLowercase",
        "when": "editorTextFocus"
    }
    ]